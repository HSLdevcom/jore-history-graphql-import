{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "rules": {
    "quotes": ["error", "double", { "avoidEscape": true }],
    "no-console": "off",
    "no-restricted-syntax": "off",
    "spaced-comment": "off",
    "import/order": "off",
    "sort-imports": "off",
    "no-await-in-loop": "off",
    "no-plusplus": "off",
    "import/prefer-default-export": "off"
  },
  "env": {
    "node": true,
    "es6": true
  }
}
